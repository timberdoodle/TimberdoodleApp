<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:shadow="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="de.tu_darmstadt.timberdoodle.ui.Fragments.DisplayPublicMessageFragment">

    <TextView
        android:id="@+id/txtPublicMessage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/threeroundedcorners"
        android:maxLines="100"
        android:scrollbars="vertical"
        android:singleLine="false" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:gravity="center|bottom"
        android:orientation="vertical">

        <app.mosn.zdepthshadowlayout.ZDepthShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            shadow:z_depth="z_depth1"
            shadow:z_depth_padding="z_depth1"
            shadow:z_depth_shape="rect">


            <Button
                android:id="@+id/delete_public_msg_button"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="#2196F3"
                android:minWidth="88dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/delete_button"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </app.mosn.zdepthshadowlayout.ZDepthShadowLayout>
    </LinearLayout>


</LinearLayout>
